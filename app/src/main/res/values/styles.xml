<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="CardBoldText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/listprimary_black</item>
    </style>

    <style name="LableText">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listprimary_black</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Heading">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/listprimary_black</item>
    </style>

    <style name="ListOtherRegularInfo">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listprimary_black</item>
    </style>

</resources>
